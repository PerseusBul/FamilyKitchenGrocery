@using FamilyKitchen.Web.ViewModels.Categories
@model CategoryListViewModel

<div class="navbar navbar-expand-lg ftco_navbar bg-dark ftco-navbar-light">
    <div class="container">
        <ul class="navbar-nav product-category">
            @for (int i = 0; i < @Model.CategoryNames.Count(); i++)
            {
                <li><a class=" nav-item btn btn-group-lg text-justify text-lg-center" asp-controller="Categories" asp-action="Details" asp-route-id="@Model.CategoryNames.ToArray()[i].Id">@Model.CategoryNames.ToArray()[i].Name</a></li>
            }
        </ul>
    </div>
</div>