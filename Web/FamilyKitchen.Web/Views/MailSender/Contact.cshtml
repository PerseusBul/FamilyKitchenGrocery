@using FamilyKitchen.Web.ViewModels.MailSender
@model ContactInputModel
@{
    ViewData["Title"] = "Contact";
}

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p>
                        <span>Address:</span> Sofia, Bulgaria
                        Izgrev, 15-17 Tintyava Street, floor 1
                        Software University Ltd.
                        Post code: 1113
                    </p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Phone:</span> <a href="tel://1234567920">+ 359 884 888 188</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Email:</span> <a href="mailto:info@yoursite.com">info@family-kitchen.com</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Website</span> <a href="/">family-kitchen.com</a></p>
                </div>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form class="bg-white p-5 contact-form" asp-controller="MailSender" asp-action="Contact" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Your Name">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" type="text" class="form-control" placeholder="Your Email">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Subject"></label>
                        <input asp-for="@Model.Subject" type="text" class="form-control" placeholder="Subject">
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Message"></label>
                        <input asp-for="@Model.Message" name="" id="" cols="30" rows="7" class="form-control" placeholder="Message">
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6 d-flex">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>

