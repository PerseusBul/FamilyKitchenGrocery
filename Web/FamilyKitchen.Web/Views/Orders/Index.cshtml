@using FamilyKitchen.Web.ViewModels.Orders
@model OrderProfileInputModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
    First Name,Last Name
*@
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 ftco-animate">
                @*!!!*@<form class="billing-form" id="orderProfile" method="post" asp-controller="Orders" asp-action="Index">
                    <h3 class="mb-4 billing-heading">Billing Details</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <div class="select-wrap">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select asp-for="Country" id="Country" class="form-control">
                                        <option value="Bulgaria">Bulgaria</option>
                                        <option value="Greece">Greece</option>
                                        <option value="Romania">Romania</option>
                                    </select>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Street"></label>
                                <input asp-for="Street" type="text" class="form-control" placeholder="House number and street name">
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="HomeUnit"></label>
                                <input asp-for="HomeUnit" type="text" class="form-control" placeholder="Appartment, suite, unit etc: (optional)">
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input asp-for="City" type="text" class="form-control" placeholder="Sofia">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Postcode"></label>
                                <input asp-for="Postcode" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Postcode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group mt-4">
                                <div class="radio">
                                    <label class="mr-3"><input type="radio" name="optradio"> Create an Account? </label>
                                    <label><input type="radio" name="optradio"> Ship to different address</label>
                                </div>
                            </div>
                        </div>
                        <p><a class="btn btn-primary py-3 px-4" id="application" asp-controller="Orders" asp-action="Payment">Next step</a></p>
                        @*<input type="submit" class="btn btn-primary" name="name" value="" />*@
                    </div>
                </form><!-- END -->
            </div>
            <div class="col-xl-5">
                <div class="row mt-5 pt-3">
                    <vc:check-out-total></vc:check-out-total>
                    
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
