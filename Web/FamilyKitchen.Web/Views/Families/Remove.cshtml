@using FamilyKitchen.Web.ViewModels.Families
@model FamilyBaseInputModel

@{
    ViewData["Title"] = "Remove";
}

<h1 class="text-success">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Families" asp-action="Remove" method="post">
            <h4>Member of your family</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.FamilyMember"></label>
                <input asp-for="@Model.FamilyMember" class="form-control" />
                <span asp-validation-for="@Model.FamilyMember" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FamilyNickname"></label>
                <input asp-for="@Model.FamilyNickname" class="form-control" />
                <span asp-validation-for="@Model.FamilyNickname" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-black py-2 px-3">Remove Family Member</button>
        </form>
    </div>
</div>
